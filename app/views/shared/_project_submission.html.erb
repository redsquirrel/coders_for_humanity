
<div class="blog-post wizard_partial span7">
  <div class="span6"><h2 class="standart-h2title center">Project: <%= @project.title %></h2>
  </div>
  <p class="meta-blog clearfix" style='text-transform: capitalize' >
    <i class="icon-user"></i> Posted By: <%= @project.creator.name %> | 
    <i class="icon-envelope"></i> <%= link_to 'Contact' %> | 
    <i class="icon-list"></i> Category: <%= @project.category.name %> | 
    <i class="icon-user"></i> Project status: <%= @project.current_state.to_s.humanize %>
  </p>
  <div class="dd_buttons clearfix">
  </div>
  <h2 class='big-text'>Description:</h2> <br> <h3><%= @project.description %></h3>
</div>
