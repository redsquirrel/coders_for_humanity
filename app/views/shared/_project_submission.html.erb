
<div class="blog-post wizard_partial">
  <div class="span10 offset1"><h2 class="standart-h2title">Project: <%= @project.title %></h2>
  </div>
  <p class="meta-blog clearfix" style='text-transform: capitalize' >
    <i class="icon-user"></i> Posted By: <%= Account.find(@project.creator_id).first_name %> <%= Account.find(@project.creator_id).last_name %> | 
    <i class="icon-envelope"></i> <%= link_to 'Contact' %> | 
    <i class="icon-list"></i> Category: <%= @project.category.name %> | 
    <i class="icon-user"></i> Project status: not yet assigned
  </p>
  <div class="dd_buttons clearfix">
  </div>
  <h2 class='big-text'>Description:</h2> <br> <h3><%= @project.description %></h3>
</div>
