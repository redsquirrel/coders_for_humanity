  <div id="container-folio" class="row ufilter"><!-- !important! => DONT REMOVE class="ufilter"--> 
    <!-- START MAIN CONTENT DIV -->
    <div class="span9 offset3">
      <div id="portfolio" class="row">
        <!-- portfolio item // THIS ITEM COMMENTED -->
        <ul id="projects">
        <% @projects.each do |project| %>
          <% if project.complete? != true %>
          <li class="span3 mix <%= project.category.id %> box pint-blog popular" >
            <h4 class="single-title">
              <%= link_to project.title, project_path(project) %></a>
            </h4>
    
            <%= project.creator.name %> <br>

            <%= project.category.name %><br>

            <%= project.status %>
          </li>                    
          <% end %>

        <% end %>
        </ul>

      </div>
    </div>
  </div>

