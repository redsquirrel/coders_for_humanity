<div class="container">
  <!--###################-->
  <!-- FILTERS-->
  <!--###################-->

  <div class="large-text center"> Project Categories </div>


  <div class="blog-line">     
    <div class="line-proj center">
      <div class="proj">           
        <div id="filters-blog">
          <ul id="Grid">

          <% @categories.each do |category| %>
          <li class="btn btn-link active filter" data-filter="<%= category.id %>" ><%= category.name %></li>
          <% end  %>
        </ul>
        </div>
      </div>  
    </div>
  </div>


  <!--###################-->
  <!--END: FILTERS-->
